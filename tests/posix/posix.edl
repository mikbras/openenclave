enclave
{
    struct posix_timespec
    {
        int64_t tv_sec;
        uint64_t tv_nsec;
    };

    trusted
    {
        public void posix_init_ecall(
            [user_check] int* uaddrs,
            size_t uaddrs_size);

        public void posix_test_ecall();

        public int posix_run_thread_ecall(int tid);
    };

    untrusted
    {
        int posix_start_thread_ocall(int tid);

        int posix_futex_wait_ocall(
            [user_check] int* uaddr,
            int futex_op,
            int val,
            [in, count=1] const struct posix_timespec* timeout);

        int posix_nanosleep_ocall(
            [in] const struct posix_timespec* req,
            [out] struct posix_timespec* rem);
    };
};
